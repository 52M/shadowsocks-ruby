#!/usr/bin/env ruby

lib = File.expand_path(File.dirname(__FILE__) + '/../lib')
$LOAD_PATH.unshift(lib) if File.directory?(lib) && !$LOAD_PATH.include?(lib)

require 'shadowsocks'
require 'shadowsocks/cli'
require 'shadowsocks/config'

begin
  config = Shadowsocks::Config.new ARGV
  crypto = Shadowsocks::Cryptos::Wrapper.crypto method: config.method, password: config.password
  cli = Shadowsocks::Cli.new({ config: config, crypto: crypto })
  cli.server_up
rescue => e
  raise e if $DEBUG
  STDERR.puts e.message
  STDERR.puts e.backtrace.join("\n")
  exit 1
end
